include mixins/svg

block variables

doctype html
html.no-js( lang="ru" )
  head
    meta( charset="UTF-8" )
    title #{title || "Руками"}
    meta( name="viewport" content="width=device-width, initial-scale=1.0" )
    //meta( name="format-detection" content="telephone=no")
    link( rel="preload" href="fonts/rkm-regular.woff2" as="font" type="font/woff2" crossorigin )
    link( rel="stylesheet" href="css/style.min.css" )

    script.
      document.documentElement.classList.remove(`no-js`);

  body
    block header
      include header

    main
      block content

      block footer
        include footer

    block popup

    .loader
      +svg("logo-rukami", 152, 32)

    script(src="js/vendor.min.js")
    script(src="js/script.min.js")
